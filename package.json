{
    "name": "postgres-mcp",
    "version": "0.1.0",
    "description": "PostgreSQL MCP server with connection pooling, tool filtering, and full extension support",
    "type": "module",
    "main": "dist/index.js",
    "types": "dist/index.d.ts",
    "bin": {
        "postgres-mcp": "dist/cli.js"
    },
    "files": [
        "dist"
    ],
    "scripts": {
        "build": "tsc",
        "dev": "tsc --watch",
        "lint": "eslint src/",
        "typecheck": "tsc --noEmit",
        "test": "vitest run",
        "test:coverage": "vitest run --coverage",
        "check": "npm run lint && npm run typecheck"
    },
    "keywords": [
        "postgresql",
        "postgres",
        "mcp",
        "mcp-server",
        "model-context-protocol",
        "database",
        "ai",
        "typescript"
    ],
    "author": "Adamic.tech",
    "license": "MIT",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/neverinfamous/postgres-mcp.git"
    },
    "bugs": {
        "url": "https://github.com/neverinfamous/postgres-mcp/issues"
    },
    "homepage": "https://github.com/neverinfamous/postgres-mcp#readme",
    "engines": {
        "node": ">=18.0.0"
    },
    "dependencies": {
        "@modelcontextprotocol/sdk": "^1.25.1",
        "commander": "^14.0.0",
        "jose": "^6.0.0",
        "pg": "^8.13.0",
        "zod": "^4.2.1"
    },
    "devDependencies": {
        "@eslint/js": "^9.28.0",
        "@types/node": "^25.0.3",
        "@types/pg": "^8.11.0",
        "@vitest/coverage-v8": "^4.0.16",
        "eslint": "^9.28.0",
        "globals": "^16.0.0",
        "typescript": "^5.9.3",
        "typescript-eslint": "^8.50.1",
        "vitest": "^4.0.15"
    }
}
